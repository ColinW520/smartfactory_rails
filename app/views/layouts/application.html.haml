<!DOCTYPE html>
%html
  %head
    %title Bikeshop
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
  .wrapper
    %header
      - if !employee_signed_in?
        %ul
          %li= link_to 'Sign in', new_employee_session_path
      - else 
        %ul
          %li= "Welcome, #{current_employee.email}" 
          %li= link_to 'Home', root_path
          %li= link_to 'Orders', orders_path
          %li= link_to 'Brands', brands_path
          %li= link_to 'Frames', frames_path
          %li= link_to 'Sign Out', destroy_employee_session_path, data:{method: :delete}


    %p#notice= notice
    %p#alert= alert

    
    = yield